<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Webshop Exercise Web Application</display-name>


    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/dispatcher-servlet.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>AdditionalServlet</servlet-name>
        <servlet-class>web.config.AdditionalServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdditionalServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DivideServlet</servlet-name>
        <servlet-class>web.config.DivideServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>DivideServlet</servlet-name>
        <url-pattern>/div</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MultiplyServlet</servlet-name>
        <servlet-class>web.config.MultiplyServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>MultiplyServlet</servlet-name>
        <url-pattern>/mul</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Substract</servlet-name>
        <servlet-class>web.config.SubstractServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Substract</servlet-name>
        <url-pattern>/sub</url-pattern>
    </servlet-mapping>


</web-app>
